<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.tugasakhir.adi.dmobile.Monitoring">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="#03a9f4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="24dp"
                android:text="STATUS KETINGGIAN AIR\nBENDUNGAN"/>
        </LinearLayout>

        <!-- Ketinggian Air-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvLabelKetinggianair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Tinggi Pernukaan Air"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:background="#03a9f4"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/tvValueKetinggianAir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:text="0"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp">
        <TextView
            android:id="@+id/tvLabelStatusair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Katagori"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:background="#03a9f4"/>
        <TextView
            android:id="@+id/tvValueStatusAir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="#dcdcdc"
            android:textSize="40dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tvLabelVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Volume Air"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="#03a9f4"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tvValueVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:text="0"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="40dp" />
        </LinearLayout>
        </LinearLayout>
</ScrollView>
